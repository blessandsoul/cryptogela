{
  "name": "itSwap",
  "description": "Non-custodial cryptocurrency exchange aggregator",
  "type": "dockerfile",
  "dockerfile": "./Dockerfile",
  "port": 3000,
  "healthcheck": {
    "path": "/api/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "environment": [
    "GROQ_API_KEY",
    "CHANGENOW_API_KEY",
    "MONGODB_URI",
    "NODE_ENV",
    "NEXT_PUBLIC_APP_URL"
  ],
  "build": {
    "command": "npm run build",
    "baseDirectory": "/"
  }
}
